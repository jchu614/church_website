<%- include("./partials/header") %>
	<div class="container">
		<div class="column">
			<h1 style="text-align: center; padding-top: 20px; font-family: Lato;">Create a New Message</h1>
			<div style="width: 60%; margin: 25px auto;">
				<form action="/messages" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="header" placeholder="header">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="imageUrl" placeholder="image url">
					</div>
					<div class="form-group">
						<textarea class="form-control" name="body" placeholder="body" rows="30" cols="80"></textarea>
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-primary btn-block">Submit</button>
					</div>
				</form>
				<a href="/messages">Go Back</a>
			</div>
		</div>
</div>
<%- include("./partials/footer") %>