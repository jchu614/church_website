<%- include("./partials/header") %>
<div class="container">
    <div class="column">
        <h1 style="text-align: center; padding-top: 20px; font-family: Lato;">Edit <%= message.name %></h1>
        <div style="width: 60%; margin: 25px auto;">
            <form action="/messages/<%= message._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="message[header]" value="<%= message.header %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="message[imageUrl]" value="<%= message.imageUrl %>">
                </div>
                <div class="form-group">
					<textarea class="form-control" type="text" name="message[body]" rows="30" cols="80"><%= message.body %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/messages">Go Back</a>
        </div>
    </div>
</div>
<%- include("./partials/footer") %>